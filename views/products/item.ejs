<div class="product-item">
  <a href="/products/<%= product._id %>">
    <div class="featured-image">
      <div class="featured-image-img" style="background-image: url('/images/product/HH11.jpg')"></div>
    </div>
  </a>

  <h2 class="title">
    <a href="/products/<%= product._id %>"><%= product.name %></a>
  </h2>

  <div class="rating">
    <div class="rating-stars">
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star-half-alt"></i>
    </div>
    <span class="rating-avg">4.5</span>
    <span class="rating-total">(5 đánh giá)</span>
    <!-- <span class="rating-total">Chưa có đánh giá</span> -->
  </div>

  <div class="price">
    <span class="regular">
      90.000 VNĐ
      <span class="percent-discount">
        -10%
      </span>
    </span>
    <span class="sale">
      100.000 VNĐ
    </span>
    <!-- <span class="regular">
      100.000 VNĐ
    </span> -->
  </div>

  <p class="description">
    <%= product.description %>
  </p>
</div>