<!doctype html>
<html lang="vi">

<head>
  <%- include(layouts + '/head'); %>
</head>

<body id="login-page">
  <%- include(layouts + '/header'); %>

  <main>
    <div class="container">
      <div class="clearfix-32"></div>

      <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
          <form action="<%= formAction %>" method="post" id="form-login">
            <h1 class="page-heading">Đăng nhập</h1>

            <% if (loginRes === "FAILED") { %>
              <div class="alert alert-danger" role="alert">
                Sai tài khoản hoặc mật khẩu!
              </div>
            <% } %>

            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Mật khẩu</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu" required />
            </div>

            <input type="hidden" name="cartLS" id="cartLS">

            <div class="d-grid mb-3">
              <button type="submit" class="btn btn-primary btn-full">Đăng nhập</button>
            </div>

            <div class="text-center">
              <p>Bạn chưa có tài khoản? <a href="<%= registerUrl %>">Đăng ký ngay</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include(layouts + '/foot'); %>

  <script type="text/javascript">
    $(document).ready(function () {
      const cart = cartLS.list().map((item) => ({
        productId: item.id,
        quantity: item.quantity
      }));

      $('#cartLS').val(JSON.stringify(cart));
    });
  </script>
</body>

</html>
